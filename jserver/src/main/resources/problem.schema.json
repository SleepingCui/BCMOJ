{
  "type": "object",
  "required": ["timeLimit", "memLimit", "securityCheck", "checkpoints"],
  "properties": {
    "timeLimit": {
      "type": "integer",
      "minimum": 1
    },
    "memLimit": {
      "type": "integer",
      "minimum": 1,
      "description": "Memory limit in kilobytes."
    },
    "securityCheck": {
      "type": "boolean"
    },
    "enableO2": {
      "type": "boolean",
      "default": false
    },
    "compareMode": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "default": 1,
      "description": "Comparison mode: 1=STRICT, 2=IGNORE_SPACES, 3=CASE_INSENSITIVE, 4=FLOAT_TOLERANT"
    },
    "checkpoints": {
      "type": "object",
      "patternProperties": {
        "^[1-9][0-9]*_in$": { "type": "string" },
        "^[1-9][0-9]*_out$": { "type": "string" }
      },
      "additionalProperties": false,
      "propertyNames": {
        "pattern": "^[1-9][0-9]*_(in|out)$"
      }
    }
  }
}