{
  "type": "object",
  "required": ["timeLimit", "securityCheck", "checkpoints"],
  "properties": {
    "timeLimit": {
      "type": "integer",
      "minimum": 1
    },
    "securityCheck": {
      "type": "boolean"
    },
    "enableO2": {
      "type": "boolean",
      "default": false
    },
    "compareMode": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "default": 1,
      "description": "Comparison mode: 1=STRICT, 2=IGNORE_SPACES, 3=CASE_INSENSITIVE, 4=FLOAT_TOLERANT"
    },
    "checkpoints": {
      "type": "object",
      "patternProperties": {
        ".*_in$": { "type": "string" },
        ".*_out$": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
